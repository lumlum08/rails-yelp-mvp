<h1>Restaurants</h1>

<ol>
<% @restaurants.each do |restaurant| %>
<li> <%= restaurant.category%> - <%= restaurant.name %></li>
<%= link_to 'Show', restaurant %>
<%= link_to 'Edit', edit_restaurant_path(restaurant) %>
<%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Add a review', new_restaurant_review_path(restaurant) %>
<% end %>

<p><%= link_to 'Add a New Restaurant', new_restaurant_path %></p>
